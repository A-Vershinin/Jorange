
nav.menu
  button(type="button" aria-label="Menu" aria-controls="navigation").hamburger.menu__hamburger.hamburger--collapse
      span.hamburger-box
        span.hamburger-inner
  ul.menu__list
    - var items = ["О компании", "Услуги", "Технологии", "Схема работы", "Преимущества", "Отзывы", "Контакты"]
    each menu in items
      if menu == "Преимущества"
        li.menu__item
          a(href="#").menu__link.menu__link--active=menu
      else
        li.menu__item
          a(href="#").menu__link=menu
